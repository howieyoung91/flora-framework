        destroy-method="destroy">
    <property name="temp" value="howieyoung"/>
  </bean>

  <bean id="userService" scope="prototype" class="xyz.yanghaoyu.flora.test.UserService">
    <property name="name" value="howieyoung"/>
    <property name="userDao" ref="userDao"/>
    <property name="iUserDao" ref="iUserDao"/>
  </bean>
  <bean id="pro" class="xyz.yanghaoyu.flora.test.Pro" scope="prototype"/>
  <bean id="iUserDao" class="xyz.yanghaoyu.flora.test.IUserDaoFactory" scope="prototype"/>
  <bean id="listener" class="xyz.yanghaoyu.flora.test.event.Listener"/>
</beans>